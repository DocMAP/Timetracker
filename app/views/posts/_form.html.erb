<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-10 ">
			<%= form_for @post do |f| %>

			<div class="form-group">
				<label>
					Date
				</label>
			<%= f.date_field :date %>
			</div>

			<div class="form-group">
				<%= f.text_area :rationale, placeholder: 'Rationale', rows: "5", cols: "60" %>
			</div>

			<%= f.submit 'Save', class: 'btn btn-default' %>

			<% end %>
			</div>
		</div>
	</div>
