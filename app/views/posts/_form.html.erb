<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-6 ">
			<%= form_for @post do |f| %>

			<div class="form-group">
				<label>
					Date
				</label>
			<%= f.date_field :date, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.text_area :rationale, placeholder: 'Rationale', rows: "5", cols: "60", class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.radio_button :status, 'submitted' %>
				<%= f.label :status, 'Submitted' %>

				<%= f.radio_button :status, 'approved' %>
				<%= f.label :status, 'Approved' %>

				<%= f.radio_button :status, 'rejected' %>
				<%= f.label :status, 'Rejected' %>
			</div>

			<%= f.submit 'Submit', class: 'btn btn-primary btn-block' %>

			<% end %>
			</div>
		</div>
	</div>
